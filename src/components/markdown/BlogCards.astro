---
import { Image } from "astro:assets";

interface IBlogCard {
  href: string;
  imageUrl: string;
  title: string;
  description: string;
};

interface Props {
  cards: IBlogCard[];
}

const { cards } = Astro.props;

---

<div class="blog-cards_wrap">
  {
    cards.map((card) => (
      <div class="blog-card">
        <a
          class="blog-card__link"
          target="_blank"
          rel="nofollow noreferrer"
          href={card.href}
        >
          <div class="blog-card__image">
            <Image
              src={card.imageUrl}
              alt={card.title}
              width="280"
              height="156"
            />
          </div>
          <div class="blog-card__content">
            <div class="blog-card__text">
              <div class="blog-card__title">
                <Fragment set:html={card.title} />
              </div>
              <p class="blog-card__description">
                <Fragment set:html={card.description} />
              </p>
            </div>
          </div>
        </a>
      </div>
    ))
  }
</div>
<style>
  html.dark .blog-card {
    border: 1px solid #404040;
    background-color: #111111;
  }
  .blog-cards_wrap {
    margin-top: 32px;
    display: flex;
    flex-wrap: wrap;
    gap: 24px;
    align-items: flex-start;
    max-width: 896px;
  }

  .blog-card {
    display: flex;
    flex-direction: column;
    border: 1px solid #e4e4e5;
    min-height: 200px;
    border-radius: 8px;
    flex: 1 1 240px; /* or 1 0 100px, and no more need in min-width at all */
    max-width: 280px;
    min-width: 240px;
  }

  .blog-card__link {
    cursor: pointer;
    text-decoration: none;
    transition: all 0.1s;
    opacity: 1;
    border-radius: 7px;
  }

  .blog-card__link:hover {
    box-shadow:
      0 3px 6px rgba(0, 0, 0, 0.08),
      0 2px 4px rgba(0, 0, 0, 0.07);
    opacity: 0.8;
  }

  .blog-card__content {
    display: flex;
    align-items: center;
    padding: 12px 16px;
    gap: 4px;
  }

  .blog-card__image {
    position: relative;
  }

  html.dark .blog-card__image img {
    border-bottom: 1px solid #3a3f42;
  }

  .blog-card__image img {
    border-top-left-radius: 7px;
    border-top-right-radius: 7px;
    border-bottom: 1px solid #d7dbdf;
    max-height: 156px;
    aspect-ratio: 16/9;
    object-fit: cover;
  }

  .blog-card__play-button {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
  }

  html.dark .blog-card__title {
    color: #ecedee;
  }

  .blog-card__title {
    margin-top: 0;
    font-size: 15px;
    font-weight: 500;
    line-height: 22.5px;
    margin-bottom: 4px;
    color: rgb(17, 24, 28);

    overflow: hidden;
    text-overflow: ellipsis;
    display: -moz-box;
    -moz-box-orient: vertical;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    line-clamp: 2;
    box-orient: vertical;
  }

  html.dark .blog-card__description {
    color: #9ba1a6;
  }

  .blog-card__description {
    font-weight: 400;
    font-size: 14px;
    line-height: 22px;
    color: rgb(104, 112, 118);
    margin-top: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -moz-box;
    -moz-box-orient: vertical;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    line-clamp: 3;
    box-orient: vertical;
  }
</style>
